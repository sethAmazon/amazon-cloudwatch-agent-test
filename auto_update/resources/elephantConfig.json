{
  "agent": {
    "metrics_collection_interval": 60,
    "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
    "debug": false
  },
  "metrics": {
    "namespace": "ElephantDemoCloudWatchAgentMetrics",
    "append_dimensions": {
      "AutoScalingGroupName": "${aws:AutoScalingGroupName}",
      "InstanceId": "${aws:InstanceId}"
    },
    "aggregation_dimensions": [
      [],
      [
        "AutoScalingGroupName"
      ],
      [
        "InstanceId"
      ]
    ],
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait",
          "cpu_usage_user",
          "cpu_usage_system"
        ]
      },
      "disk": {
        "measurement": [
          "disk_used_percent",
          "disk_inodes_free",
          "disk_inodes_total",
          "disk_inodes_used"
        ]
      },
      "diskio": {
        "measurement": [
          "diskio_io_time",
          "diskio_write_bytes",
          "diskio_read_bytes",
          "diskio_writes",
          "diskio_reads",
          "diskio_iops_in_progress"
        ]
      },
      "mem": {
        "measurement": [
          "mem_total",
          "mem_used",
          "mem_free",
          "mem_buffered",
          "mem_cached",
          "mem_used_percent"
        ]
      },
      "net": {
        "measurement": [
          "net_bytes_recv",
          "net_bytes_sent",
          "net_drop_in",
          "net_drop_out",
          "net_err_in",
          "net_err_out"
        ]
      },
      "netstat": {
        "measurement": [
          "netstat_tcp_close",
          "netstat_tcp_close_wait",
          "netstat_tcp_closing",
          "netstat_tcp_established",
          "netstat_tcp_fin_wait1",
          "netstat_tcp_fin_wait2",
          "netstat_tcp_last_ack",
          "netstat_tcp_listen",
          "netstat_tcp_none",
          "netstat_tcp_syn_sent",
          "netstat_tcp_syn_recv",
          "netstat_tcp_time_wait"
        ]
      },
      "processes": {
        "measurement": [
          "processes_total",
          "processes_running",
          "processes_zombies"
        ]
      },
      "swap": {
        "measurement": [
          "swap_free",
          "swap_used",
          "swap_used_percent"
        ]
      }
    }
  },
  "logs": {
    "log_stream_name": "UncategorizedLogStream",
    "metrics_collected": {
      "prometheus": {
        "log_group_name": "ElephantDemoCloudWatchAgentPrometheusLogGroup",
        "prometheus_config_path": "/opt/aws/amazon-cloudwatch-agent/bin/prometheusConfig.yaml",
        "emf_processor": {
          "metric_declaration_dedup": true,
          "metric_namespace": "ElephantDemoContainer/FluentBit",
          "metric_unit":{
            "node_memory_Active_anon_bytes": "Count"
          },
          "metric_declaration": [
            {
              "source_labels":["host"],
              "dimensions":[
                ["host"]
              ],
              "metric_selectors": ["^.*$"]
            }
          ]
        }
      }
    },
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
            "log_group_name": "ElephantDemoCloudWatchAgentLogGroup",
            "log_stream_name": "{instance_id}/amazon-cloudwatch-agent.log",
            "retention_in_days": 90,
            "timezone": "UTC"
          }
        ]
      }
    }
  }
}